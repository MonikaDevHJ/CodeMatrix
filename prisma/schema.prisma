generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PersonalDetail {
  id              Int      @id @default(autoincrement())
  firstName       String
  lastName        String
  bioDescription  String?
  email           String   @unique
  phone           String?
  address1        String?
  address2        String?
  city            String?
  state           String?
  country         String?
  zipcode         String?
  profilePhotoUrl String? // store image URL if you use uploads
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
